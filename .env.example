# Environment Configuration Template
# Copy this to .env file and fill in your values
# NEVER commit actual .env files to git

# Flask Configuration
FLASK_ENV=production
FLASK_APP=app.py
FLASK_SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=False

# API Keys
GEMINI_API_KEY=your-gemini-api-key-here
OPENWEATHER_API_KEY=your-openweather-api-key-here

# Database Configuration - PostgreSQL (Render)
# Render auto-injects DATABASE_URL via render.yaml. For local dev, set manually.
DATABASE_URL=postgresql://user:password@host:5432/farmdb
# OR for local PostgreSQL:
# PG_HOST=localhost
# PG_PORT=5432
# PG_DATABASE=farmdb
# PG_USER=postgres
# PG_PASSWORD=your_secure_password_here

# Frontend Configuration
FRONTEND_PORT=3000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/krishi/app.log

# Email Configuration (optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# AWS Configuration (if using AWS)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=krishi-uploads
AWS_REGION=us-east-1

# Azure Configuration (if using Azure)
AZURE_STORAGE_ACCOUNT_NAME=krishistoragedev
AZURE_STORAGE_ACCOUNT_KEY=your-azure-key-here
AZURE_SQL_CONNECTION_STRING=your-connection-string

# GCP Configuration (if using GCP)
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials.json
GCP_PROJECT_ID=your-gcp-project

# Monitoring and Logging
SENTRY_DSN=your-sentry-dsn-for-error-tracking
DATADOG_API_KEY=your-datadog-api-key
NEW_RELIC_LICENSE_KEY=your-newrelic-key

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Redis Configuration (optional - for caching)
REDIS_URL=redis://localhost:6379/0
CACHE_TYPE=RedisCache

# SSL/HTTPS
SSL_CERT_FILE=/app/ssl/cert.pem
SSL_KEY_FILE=/app/ssl/key.pem

# Feature Flags
ENABLE_VOICE_API=True
ENABLE_DOCUMENT_UPLOAD=True
ENABLE_ML_PREDICTIONS=True
ENABLE_WEATHER_API=True

# Performance
UPLOAD_MAX_SIZE=52428800  # 50MB in bytes
MAX_WORKERS=4
GUNICORN_WORKERS=4
REQUEST_TIMEOUT=120

# Session Configuration
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=2592000  # 30 days

# Database Pool Configuration
DB_POOL_SIZE=10
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=True

# API Rate Limits
CHAT_API_RATE_LIMIT=50
VOICE_API_RATE_LIMIT=30
DOCUMENT_API_RATE_LIMIT=10
ML_API_RATE_LIMIT=20
WEATHER_API_RATE_LIMIT=100
